generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  fullname  String
  username  String   @unique
  email     String   @unique
  password  String
  profile   Profile?
  follower  Follow[] @relation("follower")
  following Follow[] @relation("following")
  threads   Thread[]
  likes     Like[]   @relation("user")
}

model Profile {
  id     Int     @id @default(autoincrement())
  userId Int     @unique
  user   User    @relation(fields: [userId], references: [id])
  avatar String?
  cover  String?
  bio    String?
}

model Follow {
  followerId  Int
  followingId Int
  follower    User @relation("follower", fields: [followerId], references: [id])
  following   User @relation("following", fields: [followingId], references: [id])

  @@id([followerId, followingId])
}

model Thread {
  id        Int      @id @default(autoincrement())
  content   String?
  createdAt DateTime @default(now())
  userId    Int
  author    User     @relation(fields: [userId], references: [id])
  like      Like[]   @relation("thread")
  threadId  Int?
  parent    Thread?  @relation("threadReplies", fields: [threadId], references: [id])
  replies   Thread[] @relation("threadReplies")
  images    ThreadImage[]
}

model Like {
  threadId Int
  userId   Int
  thread   Thread @relation("thread", fields: [threadId], references: [id])
  user     User   @relation("user", fields: [userId], references: [id])

  @@id([threadId, userId])
}

model ThreadImage {
  id        Int      @id @default(autoincrement())
  image     String
  threadId  Int
  thread    Thread   @relation(fields: [threadId], references: [id])
}
